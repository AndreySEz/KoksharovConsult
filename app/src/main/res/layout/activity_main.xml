<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_foreground"
        android:background="@drawable/shapeugol"
        android:transformPivotX="0px"/>

    <TextView
        android:id="@+id/textSalution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="Food for Everyone"
        android:textSize="25pt"
        android:transformPivotX="0px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="418dp"
        android:layout_height="369dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@id/textSalution"
        app:layout_constraintTop_toBottomOf="@id/textSalution"
        app:srcCompat="@mipmap/boy1_foreground" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="282dp"
        android:layout_height="242dp"
        app:srcCompat="@mipmap/girllight_foreground"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="473dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="458dp"
        android:layout_height="423dp"
        android:layout_marginStart="-125dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/textSalution"
        app:layout_constraintTop_toBottomOf="@+id/textSalution"
        app:srcCompat="@mipmap/girl1_foreground"
        />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="571dp"
        android:layout_height="341dp"
        app:srcCompat="@mipmap/boylight_foreground"
        tools:layout_editor_absoluteX="-176dp"
        tools:layout_editor_absoluteY="443dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-20dp"
        android:width="350dp"
        android:height="64dp"
        android:background="@drawable/shapeugol_button"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

</androidx.constraintlayout.widget.ConstraintLayout>